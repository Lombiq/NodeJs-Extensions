<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <DefaultItemExcludes>$(DefaultItemExcludes);.*;node_modules\**</DefaultItemExcludes>
    <IsPublishable>false</IsPublishable>
    <!-- The NuGet package reference to Lombiq.Npm.Targets would run those targets during the build of this project,
         which we don't want. -->
    <ExecNpmInstallCommand>false</ExecNpmInstallCommand>
    <ExecDotnetPostcleanCommand>false</ExecDotnetPostcleanCommand>
    <ExecDotnetPrebuildCommand>false</ExecDotnetPrebuildCommand>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Lombiq Node.js Extensions</Title>
    <Authors>Lombiq Technologies</Authors>
    <Copyright>Copyright Â© 2022, Lombiq Technologies Ltd.</Copyright>
    <Description> See the project website for detailed documentation.</Description>
    <PackageIcon>NuGetIcon.png</PackageIcon>
    <PackageTags>Lombiq;Npm;</PackageTags>
    <RepositoryUrl>https://github.com/Lombiq/NodeJs-Extensions/</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Lombiq/NodeJs-Extensions/</PackageProjectUrl>
    <PackageLicenseFile>License.md</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\License.md" Link="License.md" Pack="true" PackagePath="" />
    <None Include="..\Readme.md" Link="Readme.md" />
    <None Include="NuGetIcon.png" Pack="true" PackagePath="" />
    <None Include="Lombiq.NodeJs.Extensions.props" Pack="true" PackagePath="build\" />
    <None Include="Lombiq.NodeJs.Extensions.targets" Pack="true" PackagePath="build\" />
    <None Remove="node_modules\**" />
  </ItemGroup>

  <ItemGroup Condition="'$(NuGetBuild)' != 'true'">
    <ProjectReference Include="..\..\Lombiq.Npm.Targets\Lombiq.Npm.Targets.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(NuGetBuild)' == 'true'">
    <!-- The version used here needs to be mirrored in the <Import> elements of the .props and .targets files. -->
    <PackageReference Include="Lombiq.Npm.Targets" Version="1.0.1-alpha.2" />
  </ItemGroup>

</Project>
